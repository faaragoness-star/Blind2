# phpstan.neon  (raíz del repo)
parameters:
  level: 0
  paths:
    - apps/wp-plugin/G3D-Flow-Orchestrator

  excludePaths:
    - */vendor/*
    - */node_modules/*

  # Ignora llamadas a funciones globales de WordPress (no tenemos stubs)
  ignoreErrors:
    - '#Call to unknown function (add_action|add_filter|do_action|apply_filters|wp_[a-z_]+|get_option|update_option|register_post_type|register_taxonomy|wp_enqueue_script|wp_enqueue_style|esc_[a-z_]+|sanitize_[a-z_]+)#'

  # Evita fallar si algún patrón de ignore no coincide
  reportUnmatchedIgnoredErrors: false

